<div class="book-edit-form">
  <h1>Editing Book</h1>

  <%= form_with model: @book, local: true do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>

    <div class="field">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>

  <%= link_to 'Show', @book %> | <%= link_to 'Back', books_path %>
</div>