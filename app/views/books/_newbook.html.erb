<div class="new-book">
  <h2>New book</h2>
  <%= form_with(model: @new_book, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :body, "opinion" %><br>
      <%= form.text_area :body %>
    </div>

    <div class="actions">
      <%= form.submit "Create Book" %>
    </div>
  <% end %>
</div>