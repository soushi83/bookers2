<div class="container">
  <div class="row">
    <!-- 左側: User infoとNew Book -->
    <div class="col-md-3">
      <div class="user-info">
        <h2>User Info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %><br>
        <p>Name <%= @book.user.name %></p>
        <p>Introduction: <%= @book.user.introduction %></p>
        <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(@book.user), class: 'edit-profile-link' %>
      </div>
      <%= render 'newbook' %>
    </div>

    <!-- 右側: Book Detail -->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <div class="book-detail">
        <%= link_to user_path(@book.user) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        <% end %>
        <br>
        <p>Posted by:<%= link_to @book.user.name, user_path(@book.user), class: 'user-name-link' %></p>
        <p>Title: <%= @book.title %></p>
        <p>Body: <%= @book.body %></p>

        <% if @book.favorited_by?(current_user) %>
          <p>
            <%= link_to book_favorite_path(@book), method: :delete do %>
              <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to book_favorite_path(@book), method: :post do %>
              <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
            <% end %>
          </p>
        <% end %>

        <!-- 編集と削除ボタン -->
        <% if @book.user == current_user %>
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-danger' %>
        <% end %>

        <div>
          <p>コメント件数：<%= @book.book_comments.count %></p>
          <% @book.book_comments.each do |book_comment| %>
            <p><%= image_tag book_comment.user.get_profile_image(50,50) %></p>
            <strong><%= book_comment.user.name %>:</strong><%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to 'Destroy', book_book_comment_path(@book, book_comment), method: :delete, data: { confirm: '本当に消しますか？'} %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@book, @book_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
        </div>
    </div>

  </div>
</div>