<div class="container">
  <div class="row">
    <!-- 左側 User info と New Book -->
    <div class="col-md-4">
      <%= render 'books/sidebar_current_user' %>
      <%= render 'books/newbook' %>
    </div>

    <!-- 右側 Users リスト -->
    <div class="col-md-8">
      <h2>Users</h2>
      <table  class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>